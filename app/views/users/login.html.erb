<h1>Login</h1>

<%= form_with(url: login_path) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <%= form.submit 'Login', class: "btn btn-primary" %>
<% end %>
