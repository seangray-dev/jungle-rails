<h1>Admin Categories</h1>

<%= form_with(model: Category.new, url: admin_categories_path, method: :post) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.submit 'Create Category' %>
<% end %>

<ul>
  <% @categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>
